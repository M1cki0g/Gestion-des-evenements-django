{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "chmod +x build.sh && ./build.sh"
    },
    "deploy": {
        "startCommand": "gunicorn main.wsgi:application --log-file -",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}